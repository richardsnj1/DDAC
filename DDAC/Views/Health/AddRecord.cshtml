@model HealthRecords
@{
    ViewData["Title"] = "AddRecord";
}

<center>
    <h1>Add Data Example:</h1>
    <hr />
    <form asp-controller="Health" asp-action="AddData" method="post">
        <table>
            <tr>
                <th><label asp-for="childName"></label></th>
                <td>
                    <input asp-for="childName" />
                    <span asp-validation-for="childName"></span>
                </td>
            </tr>
            <tr>
                <th><label asp-for="sickDate"></label></th>
                <td>
                    <input asp-for="sickDate" value="@DateTime.Now.ToString("yyyy-MM-dd")"  readonly/>
                    <span asp-validation-for="sickDate"></span>
                </td>
            </tr>
            <tr>
                <td colspan="2" style="text-align:center">
                    <button>Add Record</button>
                </td>
            </tr>
        </table>
    </form>
</center>

