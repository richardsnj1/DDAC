@model Enroll
@using Microsoft.AspNetCore.Identity
@using DDAC.Areas.Identity.Data
@inject UserManager<DDACUser> UserManager
@{
    ViewData["Title"] = "Index";
}

<h1>Enroll Child</h1>
<br />
<hr />
<br />
<form method="post" asp-action="Enrollment" asp-controller="Enroll">
    <table>
        <tr>
            <th><label asp-for="parentID"></label> </th>
            <td>
                <input asp-for="parentID" value="@UserManager.GetUserId(User)" readonly />
            </td>
        </tr>
        <tr>
            <th><label asp-for="childName"></label></th>
            <td>
                <input asp-for="childName" />
                <span asp-validation-for="childName"></span>
            </td>
        </tr>
        <tr>
            <td colspan="2" style="text-align:center">
                <button>Enroll Child</button>
            </td>
        </tr>
    </table>
</form>

